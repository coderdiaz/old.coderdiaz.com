  <body class="flex flex-col bg-[#100F0F] min-h-screen">
    <Header client:idle>
      <Container>
        <div class="flex gap-12 justify-between items-center">
          <a href="/">
            <Logotype />
          </a>
          <div class="flex items-center gap-5">
            <nav class="hidden md:flex items-center gap-3 text-white">
